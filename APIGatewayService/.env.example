# API Gateway configuration (example)
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# JWT configuration (MANDATORY: set in deployment env)
JWT_SECRET=please_change_me
JWT_ISSUER=cyclestore-api-gateway
JWT_AUDIENCE=cyclestore-clients
JWT_EXPIRES_IN=1h
JWT_ALG=HS256

# Downstream services
BUSINESS_LOGIC_URL=http://localhost:4100
DATA_SERVICE_URL=http://localhost:4200
NOTIFICATION_SERVICE_URL=http://localhost:4300
MONITORING_SERVICE_URL=http://localhost:4400
TEST_AUTOMATION_SERVICE_URL=http://localhost:4500

# CORS
CORS_ORIGIN=*

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100
